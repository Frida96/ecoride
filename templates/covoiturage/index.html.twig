{% extends 'base.html.twig' %}

{% block title %}Covoiturages - EcoRide{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <h1 class="fw-bold">
                    <i class="fas fa-car text-success me-3"></i>
                    Covoiturages disponibles
                </h1>
                <p class="lead text-muted">
                    Trouvez le trajet parfait pour vos déplacements écologiques
                </p>
            </div>

            <!-- Formulaire de recherche -->
            <div class="card mb-4">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-3">
                        <i class="fas fa-search text-success me-2"></i>
                        Rechercher un covoiturage
                    </h4>
                    
                    <form action="{{ path('app_covoiturages') }}" method="GET">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label for="depart" class="form-label">
                                    <i class="fas fa-map-marker-alt text-success me-1"></i>
                                    Départ
                                </label>
                                <input type="text" class="form-control" id="depart" name="depart" 
                                       value="{{ searchData.depart }}" placeholder="Ville de départ" required>
                            </div>
                            <div class="col-md-3">
                                <label for="arrivee" class="form-label">
                                    <i class="fas fa-flag-checkered text-primary me-1"></i>
                                    Arrivée
                                </label>
                                <input type="text" class="form-control" id="arrivee" name="arrivee" 
                                       value="{{ searchData.arrivee }}" placeholder="Ville d'arrivée" required>
                            </div>
                            <div class="col-md-3">
                                <label for="date" class="form-label">
                                    <i class="fas fa-calendar text-warning me-1"></i>
                                    Date
                                </label>
                                <input type="date" class="form-control" id="date" name="date" 
                                       value="{{ searchData.date }}" min="{{ 'now'|date('Y-m-d') }}" required>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-eco w-100">
                                    <i class="fas fa-search me-2"></i>Rechercher
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Filtres -->
            {% if hasSearch and trajets|length > 0 %}
                <div class="card mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <h5 class="fw-bold mb-0">
                                <i class="fas fa-filter text-primary me-2"></i>
                                Filtres
                            </h5>
                            <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filtresCollapse">
                                <i class="fas fa-chevron-down me-1"></i>
                                {{ hasFilters ? 'Modifier' : 'Afficher' }}
                            </button>
                        </div>
                        
                        <div class="collapse {{ hasFilters ? 'show' : '' }}" id="filtresCollapse">
                            <form action="{{ path('app_covoiturages') }}" method="GET" id="filtresForm">
                                <!-- Conserver les paramètres de recherche -->
                                <input type="hidden" name="depart" value="{{ searchData.depart }}">
                                <input type="hidden" name="arrivee" value="{{ searchData.arrivee }}">
                                <input type="hidden" name="date" value="{{ searchData.date }}">
                                
                                <div class="row g-3">
                                    <!-- Filtre écologique -->
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="ecologique" value="1" 
                                                   id="ecologique" {{ filtres.ecologique ? 'checked' : '' }}>
                                            <label class="form-check-label" for="ecologique">
                                                <i class="fas fa-leaf text-success me-1"></i>
                                                Trajets écologiques uniquement
                                            </label>
                                        </div>
                                    </div>
                                    
                                    <!-- Prix maximum -->
                                    <div class="col-md-3">
                                        <label for="prix_max" class="form-label">
                                            <i class="fas fa-euro-sign text-warning me-1"></i>
                                            Prix maximum
                                        </label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" name="prix_max" id="prix_max" 
                                                   value="{{ filtres.prix_max }}" min="1" max="100" placeholder="50">
                                            <span class="input-group-text">crédits</span>
                                        </div>
                                    </div>
                                    
                                    <!-- Durée maximum -->
                                    <div class="col-md-3">
                                        <label for="duree_max" class="form-label">
                                            <i class="fas fa-clock text-info me-1"></i>
                                            Durée maximum
                                        </label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" name="duree_max" id="duree_max" 
                                                   value="{{ filtres.duree_max }}" min="1" max="12" placeholder="6">
                                            <span class="input-group-text">heures</span>
                                        </div>
                                    </div>
                                    
                                    <!-- Note minimum -->
                                    <div class="col-md-3">
                                        <label for="note_min" class="form-label">
                                            <i class="fas fa-star text-warning me-1"></i>
                                            Note minimum
                                        </label>
                                        <select class="form-control" name="note_min" id="note_min">
                                            <option value="">Toutes les notes</option>
                                            <option value="3" {{ filtres.note_min == '3' ? 'selected' : '' }}>3+ étoiles</option>
                                            <option value="4" {{ filtres.note_min == '4' ? 'selected' : '' }}>4+ étoiles</option>
                                            <option value="4.5" {{ filtres.note_min == '4.5' ? 'selected' : '' }}>4.5+ étoiles</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-between mt-3">
                                    <button type="button" class="btn btn-outline-secondary" onclick="resetFilters()">
                                        <i class="fas fa-undo me-1"></i>
                                        Réinitialiser
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search me-1"></i>
                                        Appliquer les filtres
                                    </button>
                                </div>
                            </form>
                        </div>
                        
                        <!-- Filtres actifs -->
                        {% if hasFilters %}
                            <div class="mt-3">
                                <small class="text-muted">Filtres actifs :</small>
                                <div class="d-flex gap-2 flex-wrap mt-1">
                                    {% if filtres.ecologique %}
                                        <span class="badge bg-success">
                                            <i class="fas fa-leaf me-1"></i>Écologique
                                        </span>
                                    {% endif %}
                                    {% if filtres.prix_max %}
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-euro-sign me-1"></i>Max {{ filtres.prix_max }} crédits
                                        </span>
                                    {% endif %}
                                    {% if filtres.duree_max %}
                                        <span class="badge bg-info">
                                            <i class="fas fa-clock me-1"></i>Max {{ filtres.duree_max }}h
                                        </span>
                                    {% endif %}
                                    {% if filtres.note_min %}
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-star me-1"></i>{{ filtres.note_min }}+ étoiles
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
            {% if hasSearch %}
                {% if noResults %}
                    <!-- Aucun résultat -->
                    <div class="card mb-4">
                        <div class="card-body text-center p-5">
                            <i class="fas fa-search text-muted" style="font-size: 4rem; margin-bottom: 20px;"></i>
                            <h3 class="fw-bold mb-3">Aucun covoiturage trouvé</h3>
                            <p class="lead mb-4">
                                Aucun trajet disponible de <strong>{{ searchData.depart }}</strong> 
                                vers <strong>{{ searchData.arrivee }}</strong> le <strong>{{ searchData.date|date('d/m/Y') }}</strong>.
                            </p>
                            
                            {% if alternativeDate %}
                                <div class="alert alert-info">
                                    <i class="fas fa-lightbulb me-2"></i>
                                    <strong>Suggestion :</strong> Un trajet est disponible le 
                                    <strong>{{ alternativeDate|date('d/m/Y à H:i') }}</strong>
                                    <a href="{{ path('app_covoiturages') }}?depart={{ searchData.depart }}&arrivee={{ searchData.arrivee }}&date={{ alternativeDate|date('Y-m-d') }}" 
                                       class="btn btn-sm btn-outline-primary ms-2">
                                        Voir ce trajet
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    <!-- Résultats trouvés -->
                    <div class="mb-4">
                        <h4 class="fw-bold">
                            <i class="fas fa-route text-success me-2"></i>
                            {{ trajets|length }} trajet{{ trajets|length > 1 ? 's' : '' }} trouvé{{ trajets|length > 1 ? 's' : '' }}
                        </h4>
                        <p class="text-muted">
                            De <strong>{{ searchData.depart }}</strong> vers <strong>{{ searchData.arrivee }}</strong> 
                            le <strong>{{ searchData.date|date('d/m/Y') }}</strong>
                        </p>
                    </div>

                    <!-- Liste des trajets -->
                    <div class="row g-4">
                        {% for trajet in trajets %}
                            <div class="col-12">
                                <div class="card trajet-card h-100">
                                    <div class="card-body p-4">
                                        <div class="row align-items-center">
                                            <!-- Informations chauffeur -->
                                            <div class="col-md-3">
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="avatar-circle me-3">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="fw-bold mb-1">{{ trajet.chauffeur.pseudo }}</h6>
                                                        <div class="stars">
                                                            {% set note = 4.5 %} {# TODO: Calculer vraie note #}
                                                            {% for i in 1..5 %}
                                                                <i class="fas fa-star {{ i <= note ? 'text-warning' : 'text-muted' }}"></i>
                                                            {% endfor %}
                                                            <span class="text-muted ms-1">({{ note }})</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Détails du trajet -->
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-6">
                                                        <div class="trajet-info">
                                                            <i class="fas fa-circle text-success me-2"></i>
                                                            <strong>{{ trajet.lieuDepart }}</strong>
                                                            <div class="text-muted small">
                                                                {{ trajet.dateDepart|date('H:i') }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="trajet-info">
                                                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                                            <strong>{{ trajet.lieuArrivee }}</strong>
                                                            <div class="text-muted small">
                                                                {{ trajet.dateArrivee|date('H:i') }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="mt-3">
                                                    <div class="d-flex gap-3 flex-wrap">
                                                        <span class="badge bg-light text-dark">
                                                            <i class="fas fa-users me-1"></i>
                                                            {{ trajet.placesRestantes }} place{{ trajet.placesRestantes > 1 ? 's' : '' }}
                                                        </span>
                                                        
                                                        {% if trajet.isEcologique %}
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-leaf me-1"></i>
                                                                Écologique
                                                            </span>
                                                        {% endif %}
                                                        
                                                        <span class="badge bg-light text-dark">
                                                            <i class="fas fa-clock me-1"></i>
                                                            {{ trajet.dureeFormatee }}
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Prix et actions -->
                                            <div class="col-md-3 text-end">
                                                <div class="price-section">
                                                    <div class="price">
                                                        <span class="fw-bold text-success fs-3">{{ trajet.prix }}</span>
                                                        <span class="text-muted">crédits</span>
                                                    </div>
                                                    
                                                    <div class="mt-3">
                                                        <a href="{{ path('app_covoiturage_detail', {id: trajet.id}) }}" class="btn btn-outline-success btn-sm w-100 mb-2">
                                                            <i class="fas fa-info-circle me-1"></i>
                                                            Détails
                                                        </a>
                                                        
                                                        {% if trajet.placesRestantes > 0 %}
                                                            <button class="btn btn-eco btn-sm w-100">
                                                                <i class="fas fa-plus-circle me-1"></i>
                                                                Participer
                                                            </button>
                                                        {% else %}
                                                            <button class="btn btn-secondary btn-sm w-100" disabled>
                                                                <i class="fas fa-times-circle me-1"></i>
                                                                Complet
                                                            </button>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            {% else %}
                <!-- Aucune recherche effectuée -->
                <div class="card mb-4">
                    <div class="card-body text-center p-5">
                        <i class="fas fa-search text-success" style="font-size: 4rem; margin-bottom: 20px;"></i>
                        <h3 class="fw-bold mb-3">Recherchez votre trajet</h3>
                        <p class="lead mb-4">
                            Utilisez le formulaire ci-dessus pour trouver les covoiturages 
                            qui correspondent à vos critères de voyage.
                        </p>
                        <a href="{{ path('app_home') }}" class="btn btn-eco">
                            <i class="fas fa-home me-2"></i>
                            Retour à l'accueil
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.trajet-card {
    transition: all 0.3s ease;
    border: 2px solid transparent;
}

.trajet-card:hover {
    transform: translateY(-2px);
    border-color: var(--eco-green);
    box-shadow: 0 8px 25px rgba(34, 197, 94, 0.2);
}

.avatar-circle {
    width: 50px;
    height: 50px;
    background: linear-gradient(45deg, var(--eco-green), var(--eco-blue));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.2rem;
}

.stars .fa-star {
    font-size: 0.9rem;
}

.trajet-info {
    margin-bottom: 10px;
}

.price {
    text-align: center;
    padding: 15px;
    background: rgba(34, 197, 94, 0.1);
    border-radius: 10px;
    margin-bottom: 15px;
}

.badge {
    padding: 8px 12px;
    font-size: 0.85rem;
}

.form-check-input:checked {
    background-color: var(--eco-green);
    border-color: var(--eco-green);
}
</style>

<script>
function resetFilters() {
    // Réinitialiser tous les champs du formulaire de filtres
    document.getElementById('ecologique').checked = false;
    document.getElementById('prix_max').value = '';
    document.getElementById('duree_max').value = '';
    document.getElementById('note_min').value = '';
    
    // Soumettre le formulaire pour supprimer les filtres
    document.getElementById('filtresForm').submit();
}

// Soumission automatique lors du changement de la checkbox écologique
document.getElementById('ecologique').addEventListener('change', function() {
    document.getElementById('filtresForm').submit();
});
</script>
{% endblock %}
