{% extends 'base.html.twig' %}

{% block title %}Modifier {{ vehicule.marque }} {{ vehicule.modele }} - EcoRide{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="fw-bold">
                            <i class="fas fa-edit text-primary me-3"></i>
                            Modifier mon véhicule
                        </h1>
                        <p class="text-muted">
                            Modifiez les informations de votre 
                            <strong>{{ vehicule.marque }} {{ vehicule.modele }}</strong>
                        </p>
                    </div>
                    <a href="{{ path('app_profil_vehicules') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>

            <!-- Véhicule actuel -->
            <div class="card mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-car text-success me-2"></i>
                        Véhicule actuel
                    </h5>
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="vehicle-current-icon">
                                {% if vehicule.energie == 'electrique' %}
                                    <i class="fas fa-car text-success"></i>
                                {% else %}
                                    <i class="fas fa-car text-primary"></i>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-bold mb-1">
                                        {{ vehicule.marque }} {{ vehicule.modele }}
                                        {% if vehicule.energie == 'electrique' %}
                                            <span class="badge bg-success ms-2">
                                                <i class="fas fa-leaf me-1"></i>Écologique
                                            </span>
                                        {% endif %}
                                    </h6>
                                    <p class="text-muted mb-0">
                                        {{ vehicule.couleur }} - {{ vehicule.energie|title }} - {{ vehicule.immatriculation }}
                                    </p>
                                    <small class="text-muted">
                                        Immatriculé le {{ vehicule.datePremierImmatriculation|date('d/m/Y') }}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Formulaire de modification -->
            <div class="card">
                <div class="card-body p-4">
                    <!-- Info écologique -->
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Modification :</strong> Vous pouvez modifier toutes les informations de votre véhicule. 
                        Les véhicules électriques restent automatiquement marqués comme "écologiques".
                    </div>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        
                        <div class="row g-4">
                            <!-- Plaque d'immatriculation -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fas fa-id-card text-primary me-2"></i>{{ form_label(form.immatriculation) }}
                                </label>
                                {{ form_widget(form.immatriculation) }}
                                {{ form_errors(form.immatriculation) }}
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Format : AB-123-CD ou AB123CD
                                </div>
                            </div>

                            <!-- Date immatriculation -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fas fa-calendar text-primary me-2"></i>{{ form_label(form.datePremierImmatriculation) }}
                                </label>
                                {{ form_widget(form.datePremierImmatriculation) }}
                                {{ form_errors(form.datePremierImmatriculation) }}
                            </div>

                            <!-- Marque -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fas fa-industry text-primary me-2"></i>{{ form_label(form.marque) }}
                                </label>
                                {{ form_widget(form.marque) }}
                                {{ form_errors(form.marque) }}
                            </div>

                            <!-- Modèle -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fas fa-car text-primary me-2"></i>{{ form_label(form.modele) }}
                                </label>
                                {{ form_widget(form.modele) }}
                                {{ form_errors(form.modele) }}
                            </div>

                            <!-- Couleur -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fas fa-palette text-primary me-2"></i>{{ form_label(form.couleur) }}
                                </label>
                                {{ form_widget(form.couleur) }}
                                {{ form_errors(form.couleur) }}
                            </div>

                            <!-- Énergie -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fas fa-gas-pump text-primary me-2"></i>{{ form_label(form.energie) }}
                                </label>
                                {{ form_widget(form.energie) }}
                                {{ form_errors(form.energie) }}
                                <div class="form-text">
                                    <i class="fas fa-leaf text-success me-1"></i>
                                    Les véhicules électriques sont marqués comme écologiques
                                </div>
                            </div>
                        </div>

                        <!-- Aperçu modifications en temps réel -->
                        <div class="mt-4">
                            <h5 class="fw-bold mb-3">
                                <i class="fas fa-eye text-info me-2"></i>
                                Aperçu des modifications
                            </h5>
                            <div class="card bg-light">
                                <div class="card-body p-3">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <div class="vehicle-preview-icon">
                                                <i class="fas fa-car text-primary" id="preview-icon"></i>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="preview-content">
                                                <h6 class="fw-bold mb-1">
                                                    <span id="preview-marque">{{ vehicule.marque }}</span> 
                                                    <span id="preview-modele">{{ vehicule.modele }}</span>
                                                    <span id="preview-eco-badge" class="badge bg-success ms-2" 
                                                          style="display: {{ vehicule.energie == 'electrique' ? 'inline-block' : 'none' }};">
                                                        <i class="fas fa-leaf me-1"></i>Écologique
                                                    </span>
                                                </h6>
                                                <p class="text-muted mb-0">
                                                    <span id="preview-couleur">{{ vehicule.couleur }}</span> - 
                                                    <span id="preview-energie">{{ vehicule.energie|title }}</span>
                                                </p>
                                                <small class="text-muted">
                                                    <i class="fas fa-id-card me-1"></i>
                                                    <span id="preview-immat">{{ vehicule.immatriculation }}</span>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Avertissement si changement important -->
                        <div class="alert alert-warning mt-4" style="display: none;" id="warning-changes">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Attention :</strong> Vous avez modifié des informations importantes. 
                            Assurez-vous que ces informations sont correctes avant de sauvegarder.
                        </div>

                        <!-- Boutons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_profil_vehicules') }}" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Enregistrer les modifications
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.vehicle-current-icon {
    width: 60px;
    height: 60px;
    background: rgba(34, 197, 94, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
}

.vehicle-preview-icon {
    width: 50px;
    height: 50px;
    background: rgba(34, 197, 94, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
}

.form-control:focus {
    border-color: var(--eco-green);
    box-shadow: 0 0 0 0.2rem rgba(34, 197, 94, 0.25);
}
</style>

<script>
// Aperçu en temps réel et détection des changements
document.addEventListener('DOMContentLoaded', function() {
    const marqueSelect = document.getElementById('vehicle_marque');
    const modeleInput = document.getElementById('vehicle_modele');
    const couleurSelect = document.getElementById('vehicle_couleur');
    const energieSelect = document.getElementById('vehicle_energie');
    const immatInput = document.getElementById('vehicle_immatriculation');

    // Valeurs originales pour détecter les changements
    const originalValues = {
        marque: '{{ vehicule.marque }}',
        modele: '{{ vehicule.modele }}',
        couleur: '{{ vehicule.couleur }}',
        energie: '{{ vehicule.energie }}',
        immatriculation: '{{ vehicule.immatriculation }}'
    };

    function updatePreview() {
        document.getElementById('preview-marque').textContent = marqueSelect.value || originalValues.marque;
        document.getElementById('preview-modele').textContent = modeleInput.value || originalValues.modele;
        document.getElementById('preview-couleur').textContent = couleurSelect.value || originalValues.couleur;
        document.getElementById('preview-energie').textContent = energieSelect.value || originalValues.energie;
        document.getElementById('preview-immat').textContent = immatInput.value || originalValues.immatriculation;

        // Badge écologique
        const ecoBadge = document.getElementById('preview-eco-badge');
        const previewIcon = document.getElementById('preview-icon');
        
        if (energieSelect.value === 'electrique') {
            ecoBadge.style.display = 'inline-block';
            previewIcon.className = 'fas fa-car text-success';
        } else {
            ecoBadge.style.display = 'none';
            previewIcon.className = 'fas fa-car text-primary';
        }

        // Détecter les changements importants
        const hasChanges = (
            marqueSelect.value !== originalValues.marque ||
            modeleInput.value !== originalValues.modele ||
            energieSelect.value !== originalValues.energie ||
            immatInput.value !== originalValues.immatriculation
        );

        const warningDiv = document.getElementById('warning-changes');
        if (hasChanges) {
            warningDiv.style.display = 'block';
        } else {
            warningDiv.style.display = 'none';
        }
    }

    // Écouter les changements
    [marqueSelect, modeleInput, couleurSelect, energieSelect, immatInput].forEach(element => {
        element.addEventListener('input', updatePreview);
        element.addEventListener('change', updatePreview);
    });

    // Initialiser l'aperçu
    updatePreview();
});
</script>
{% endblock %}