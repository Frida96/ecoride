{% extends 'base.html.twig' %}

{% block title %}Connexion - EcoRide{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <i class="fas fa-leaf text-success" style="font-size: 3rem; margin-bottom: 15px;"></i>
                        <h2 class="fw-bold text-success">Connexion</h2>
                        <p class="text-muted">Acc√©dez √† votre espace EcoRide</p>
                    </div>

                    <!-- Messages d'erreur -->
                    {% if error %}
                        <div class="alert alert-danger d-flex align-items-center mb-4">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <!-- Message si d√©j√† connect√© -->
                    {% if app.user %}
                        <div class="alert alert-info d-flex align-items-center mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            Vous √™tes connect√© en tant que <strong>{{ app.user.userIdentifier }}</strong>
                            <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-secondary ms-3">
                                <i class="fas fa-sign-out-alt me-1"></i>D√©connexion
                            </a>
                        </div>
                    {% endif %}

                    <!-- Formulaire de connexion -->
                    <form method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">
                                <i class="fas fa-envelope text-success me-2"></i>Email
                            </label>
                            <input type="email" 
                                   value="{{ last_username }}" 
                                   name="_username" 
                                   id="username" 
                                   class="form-control" 
                                   autocomplete="email" 
                                   placeholder="votre@email.fr"
                                   required 
                                   autofocus>
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">
                                <i class="fas fa-lock text-success me-2"></i>Mot de passe
                            </label>
                            <input type="password" 
                                   name="_password" 
                                   id="password" 
                                   class="form-control" 
                                   autocomplete="current-password" 
                                   placeholder="Votre mot de passe"
                                   required>
                        </div>

                        <!-- Option Se souvenir de moi -->
                        <div class="form-check mb-4">
                            <input type="checkbox" 
                                   name="_remember_me" 
                                   id="_remember_me" 
                                   class="form-check-input">
                            <label for="_remember_me" class="form-check-label text-muted">
                                Se souvenir de moi
                            </label>
                        </div>

                        <!-- Token CSRF -->
                        <input type="hidden" 
                               name="_csrf_token" 
                               value="{{ csrf_token('authenticate') }}">

                        <!-- Bouton de connexion -->
                        <button class="btn btn-eco w-100 mb-4" type="submit">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Se connecter
                        </button>
                    </form>

                    <!-- Liens utiles -->
                    <div class="text-center">
                        <div class="mb-3">
                            <a href="#" class="text-decoration-none text-muted">
                                <i class="fas fa-key me-1"></i>Mot de passe oubli√© ?
                            </a>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="text-center">
                            <p class="text-muted mb-2">Pas encore inscrit ?</p>
                            <a href="{{ path('app_register') }}" class="btn btn-outline-success">
                                <i class="fas fa-leaf me-2"></i>
                                Fais le geste ! üå±
                            </a>
                            <p class="small text-muted mt-2">
                                Rejoins la communaut√© EcoRide et re√ßois <strong>20 cr√©dits gratuits</strong> !
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section avantages inscription -->
            <div class="text-center mt-4">
                <div class="row g-3">
                    <div class="col-4">
                        <div class="text-success">
                            <i class="fas fa-gift fa-2x mb-2"></i>
                            <p class="small mb-0">20 cr√©dits<br>gratuits</p>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="text-success">
                            <i class="fas fa-leaf fa-2x mb-2"></i>
                            <p class="small mb-0">100%<br>√©cologique</p>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="text-success">
                            <i class="fas fa-users fa-2x mb-2"></i>
                            <p class="small mb-0">Communaut√©<br>active</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border: none;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(34, 197, 94, 0.15) !important;
}

.form-control:focus {
    border-color: var(--eco-green);
    box-shadow: 0 0 0 0.2rem rgba(34, 197, 94, 0.25);
}

.form-check-input:checked {
    background-color: var(--eco-green);
    border-color: var(--eco-green);
}

.alert {
    border-radius: 10px;
    border: none;
}
</style>
{% endblock %}
