                            <p class="small mb-0">Profils<br>v√©rifi√©s</p>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="text-muted">
                            <i class="fas fa-heart fa-2x mb-2"></i>
                            <p class="small mb-0">Communaut√©<br>bienveillante</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.form-control:focus {
    border-color: var(--eco-green);
    box-shadow: 0 0 0 0.2rem rgba(34, 197, 94, 0.25);
}

.form-check-input:checked {
    background-color: var(--eco-green);
    border-color: var(--eco-green);
}

.invalid-feedback {
    display: block;
}

.form-error {
    color: #dc3545;
    font-size: 0.875em;
    margin-top: 0.25rem;
}
</style>
{% endblock %}