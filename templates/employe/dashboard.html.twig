{% extends 'base.html.twig' %}

{% block title %}Espace Employé - EcoRide{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center mb-0">
                <i class="fas fa-user-tie eco-icon" style="font-size: 2rem;"></i>
                Espace Employé
            </h1>
            <p class="text-center text-muted">Gestion des avis et résolution des problèmes</p>
        </div>
    </div>

    <!-- Messages Flash -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-star text-warning" style="font-size: 2rem;"></i>
                    <h3 class="mt-2">{{ avis_en_attente|length }}</h3>
                    <p class="text-muted mb-0">Avis en attente</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle text-danger" style="font-size: 2rem;"></i>
                    <h3 class="mt-2">{{ covoiturages_problemes|length }}</h3>
                    <p class="text-muted mb-0">Problèmes à résoudre</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs pour organiser les sections -->
    <ul class="nav nav-tabs mb-4" id="employeTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="avis-tab" data-bs-toggle="tab" data-bs-target="#avis" type="button" role="tab">
                <i class="fas fa-star me-2"></i>Avis en attente ({{ avis_en_attente|length }})
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="problemes-tab" data-bs-toggle="tab" data-bs-target="#problemes" type="button" role="tab">
                <i class="fas fa-exclamation-triangle me-2"></i>Problèmes ({{ covoiturages_problemes|length }})
            </button>
        </li>
    </ul>

    <div class="tab-content" id="employeTabsContent">
        <!-- Tab Avis en attente -->
        <div class="tab-pane fade show active" id="avis" role="tabpanel">
            {% if avis_en_attente is empty %}
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-check-circle text-success" style="font-size: 3rem;"></i>
                        <h4 class="mt-3">Aucun avis en attente</h4>
                        <p class="text-muted">Tous les avis ont été traités !</p>
                    </div>
                </div>
            {% else %}
                {% for avis in avis_en_attente %}
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Avis pour {{ avis.participation.trajet.chauffeur.pseudo }}</strong>
                                <small class="text-muted ms-2">par {{ avis.participation.passager.pseudo }}</small>
                            </div>
                            <div class="d-flex align-items-center">
                                {% for i in 1..5 %}
                                    <i class="fas fa-star {{ i <= avis.note ? 'text-warning' : 'text-muted' }}"></i>
                                {% endfor %}
                                <span class="ms-2 badge bg-secondary">{{ avis.note }}/5</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h6>Commentaire :</h6>
                            <p class="mb-3">{{ avis.commentaire }}</p>
                            
                            <h6>Détails du trajet :</h6>
                            <div class="row">
                                <div class="col-md-6">
                                                            <small class="text-muted">De :</small> {{ avis.participation.trajet.lieuDepart }}<br>
                        <small class="text-muted">À :</small> {{ avis.participation.trajet.lieuArrivee }}
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">Date :</small> {{ avis.participation.trajet.dateDepart|date('d/m/Y à H:i') }}<br>
                                    <small class="text-muted">Prix :</small> {{ avis.participation.trajet.prix }} crédits
                                </div>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-end">
                            <form method="post" action="{{ path('app_employe_avis_refuser', {'id': avis.id}) }}" class="me-2">
                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir refuser cet avis ?')">
                                    <i class="fas fa-times me-1"></i>Refuser
                                </button>
                            </form>
                            <form method="post" action="{{ path('app_employe_avis_valider', {'id': avis.id}) }}">
                                <button type="submit" class="btn btn-eco">
                                    <i class="fas fa-check me-1"></i>Valider
                                </button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>

        <!-- Tab Problèmes -->
        <div class="tab-pane fade" id="problemes" role="tabpanel">
            {% if covoiturages_problemes is empty %}
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-check-circle text-success" style="font-size: 3rem;"></i>
                        <h4 class="mt-3">Aucun problème en cours</h4>
                        <p class="text-muted">Tous les covoiturages se déroulent bien !</p>
                    </div>
                </div>
            {% else %}
                {% for participation in covoiturages_problemes %}
                    <div class="card mb-3">
                        <div class="card-header bg-danger text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>Problème signalé</strong>
                                </div>
                                <small>Covoiturage #{{ participation.trajet.id }}</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <h6><i class="fas fa-user-tie me-2"></i>Chauffeur</h6>
                                    <p class="mb-1">{{ participation.trajet.chauffeur.pseudo }}</p>
                                    <small class="text-muted">{{ participation.trajet.chauffeur.email }}</small>
                                </div>
                                <div class="col-md-6">
                                    <h6><i class="fas fa-user me-2"></i>Passager</h6>
                                    <p class="mb-1">{{ participation.passager.pseudo }}</p>
                                    <small class="text-muted">{{ participation.passager.email }}</small>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <small class="text-muted">Départ :</small><br>
                                    {{ participation.trajet.lieuDepart }}
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">Arrivée :</small><br>
                                    {{ participation.trajet.lieuArrivee }}
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <small class="text-muted">Date départ :</small><br>
                                    {{ participation.trajet.dateDepart|date('d/m/Y à H:i') }}
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">Date arrivée :</small><br>
                                    {{ participation.trajet.dateArrivee|date('d/m/Y à H:i') }}
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">Prix :</small><br>
                                    {{ participation.trajet.prix }} crédits
                                </div>
                            </div>

                            {% if participation.commentaireProbleme %}
                                <div class="alert alert-warning">
                                    <h6><i class="fas fa-comment me-2"></i>Commentaire du passager :</h6>
                                    <p class="mb-0">{{ participation.commentaireProbleme }}</p>
                                </div>
                            {% endif %}
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_employe_covoiturage_detail', {'id': participation.id}) }}" class="btn btn-outline-primary">
                                <i class="fas fa-eye me-1"></i>Voir détails
                            </a>
                            <form method="post" action="{{ path('app_employe_resoudre_probleme', {'id': participation.id}) }}">
                                <button type="submit" class="btn btn-eco" onclick="return confirm('Êtes-vous sûr que ce problème est résolu ? Les crédits du chauffeur seront mis à jour.')">
                                    <i class="fas fa-check me-1"></i>Marquer comme résolu
                                </button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}